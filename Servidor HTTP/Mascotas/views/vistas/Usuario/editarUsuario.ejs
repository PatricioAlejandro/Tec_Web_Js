
    <h1>Editar Usuario - <%= usuarioAEditar.nombres %></h1>

    <div class="row">
        <div class="col-sm-5">
            <form action="/Usuario/EditarUsuario" method="post">
                <div class="form-group">
                    <label>Nombres</label>
                    <input type="text" class="form-control" placeholder="Ingrese nombres" name="nombres" value="<%= usuarioAEditar.nombres %>">
                </div>
                <div class="form-group">
                    <label>Apellidos</label>
                    <input type="text" class="form-control" placeholder="Ingrese apellidos" name="apellidos" value="<%= usuarioAEditar.apellidos %>">
                </div>
                <div class="form-group">
                    <label>Correo</label>
                    <input type="email" class="form-control" placeholder="Correo" name="correo" value="<%= usuarioAEditar.correo %>">
                </div>

                <div class="form-group">
                    <input type="hidden" class="form-control" id="idUsario" name="id" value="<%= usuarioAEditar.id %>">
                </div>

                <button type="submit" class="btn btn-success btn-block">Editar Usuario :)</button>
            </form>
        </div>
        <div class="col-sm-2"></div>
        <div class="col-sm-5 text-center">
            <h2><%= usuarioAEditar.apellidos %></h2>
            <h4><%= usuarioAEditar.nombres %>  <%= usuarioAEditar.apellidos %></h4>
            <h5><%= usuarioAEditar.correo %></h5>
        </div>
    </div>