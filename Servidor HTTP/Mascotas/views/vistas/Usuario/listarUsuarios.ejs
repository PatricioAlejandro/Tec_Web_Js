<h1>Lista de Usuarios</h1>
<div class="row">
    <div class="col-sm-9">
        <p>Aqui se listan todos los usuarios del sistema de mascotas.</p>
    </div>
    <div class="col-sm-3">
        <a href="/CrearUsuario" class="btn btn-block btn-success">
           Crear Usuario
       </a>
    </div>
</div>
<br>


<% for(var i=0;i<usuarios.length;i++){%>
    <div class="row ma-margen-top-bottom">
        <div class="col-sm-5" text-center>
            <div class="panel">

                <div class="text-center ma-borde ma-padding">
                    <h1><%= usuarios[i].apellidos %></h1>
                </div>


            </div>
        </div>
        <div class="col-sm-1"></div>
        <div class="col-sm-7" text-center>
            <div class="panel">

                <div class="text-center ma-borde" style="margin-top: 25px;">
                    <p>
                        <%= usuarios[i].nombres %>
                            <%= usuarios[i].apellidos %>
                    </p>
                    <p>
                        <%= usuarios[i].correo %>
                    </p>
                </div>

            </div>
        </div>

        <div class="col-sm-1">
            <a href="/Usuario/borrarUsuarios?id=<%= usuarios[i].id %>" class="btn btn-danger btn-block">
                X
                </a>
            <a href="/Usuario/editarUsuarios?id=<%= usuarios[i].id %>" class="btn btn-info btn-block">
                Edit
                </a>
        </div>
    </div>
    <% }%>